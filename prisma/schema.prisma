generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Tag {
  id String @id @default(uuid()) // Primary key menggunakan UUID
  name   String
  color  String
  entities Entity[] @relation("EntityTags")
}

model Entity {
  id    String @id @default(cuid())
  name  String
  tags  Tag[] @relation("EntityTags")
}